<Window x:Class="KeyPadCompanion.UI.Windows.AudioInputPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyPadCompanion.UI.Windows"
        mc:Ignorable="d"
        Title="AudioInputPickerWindow" Height="121" Width="428" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="DevicesComboBox" Margin="10,10,10,10"/>
        <Button x:Name="SaveButton" Content="Save" Margin="10,10,10,10" Grid.Row="1" Click="SaveButton_Click"/>

    </Grid>
</Window>
